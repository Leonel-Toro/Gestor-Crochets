@model int
@{
    var idParte = Model;
}

<div class="box-patron">
    <div class="header-patron">
        <input class="title-patron bold" id="parte-@idParte" value="Nueva Parte" />
        <div class="btn-plus">
            <i class="fa-solid fa-cloud"></i>
            <i class="fa-solid fa-plus"></i>
        </div>
    </div>
    <div id="vueltas-nro-@idParte" class="vuelta-nro-1 d-flex position-relative my-3">
        <div class="vueltas">
            <label class="control-label" id="vuelta-@idParte-1">V1:</label>
        </div>
        <div class="d-flex flex-column punto-cantidad">
            <input type="text" class="form-control" id="TpCantidad-@idParte-1" placeholder="ej: 4 pb" />
        </div>
        <div class="input-group colorpicker-nuevaParte">
            <input type="text"
                   class="color"
                   id="color"
                   value=""
                   hidden />
            <span class="input-group-text colorpicker-input-addon p-1">
                <i style="width: 30px; height: 30px;"></i>
            </span>
        </div>
    </div>
    <div class="text-end">
        <button type="button" class="btn btn-primary btn-vuelta-agregar">Agregar vuelta</button>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-colorpicker@3.4.0/dist/js/bootstrap-colorpicker.min.js"></script>

<script>
    $(document).ready(function() {
        inicializarColorPicker();

        function inicializarColorPicker() {
            $(".colorpicker-nuevaParte").colorpicker({
                "color": "#000000",
                format: 'hex',
                useAlpha:false
            });         
        }
    });
</script>