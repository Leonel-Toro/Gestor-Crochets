@page
@model Gestor.Pages.Ingresos.CreateModel

@{
    ViewData["Title"] = "Ingresos";
}

<h4>Ingresos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Valor de la venta</label>
                <input asp-for="Ingresos.valor_venta" min="0" value="0" class="form-control" />
                <span asp-validation-for="Ingresos.valor_venta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Forma de la Venta</label>
                <select asp-for="Ingresos.forma_venta" class="form-control">
                    @foreach(var forma in Model.FormaVenta){
                        <option value="@forma">@forma</option>
                    }
                </select>
                <span asp-validation-for="Ingresos.forma_venta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Valor de Hora</label>
                <input asp-for="Ingresos.valor_hora" min="0" value="0" class="form-control" />
                <span asp-validation-for="Ingresos.valor_hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Valor de Entrega</label>
                <input asp-for="Ingresos.valor_entrega" min="0" value="0" class="form-control" />
                <span asp-validation-for="Ingresos.valor_entrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
