@page
@model MainView 
@{
    ViewData["Title"] = "Reni Crochets";
    ViewData["Header"] = "Principal";

    List<Gestor.Modelos.Producto> listaImgProductos = Model.listaImgProductos;
}

<div class="lead-view text-center principal">
    <div class="card-title">
        <div class="main-logo mb-1">
            <img class="logo-img" src="./img/fotoPrueba.png" />
        </div>
        <h1 class="text-uppercase title-primary">RENI CROCHET</h1>
        <h3 class="text-uppercase title-primary">Tejidos con amor</h3>
    </div>
    <div class="card-body p-0">
        <div class="world-of-images mx-auto">
            @foreach (Gestor.Modelos.Producto imgProductos in listaImgProductos)
            {
                <a asp-page="Producto/DetalleProduct" asp-route-id="@imgProductos.Id">
                    <img src="@imgProductos.imgPrincipal" class="examples-img" />
                </a>
            }
        </div>
    </div>
</div>

<style>
    footer .container{
        padding-right:500px;
    }
</style>